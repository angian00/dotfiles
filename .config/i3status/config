general {
        output_format = "i3bar"
        colors = true
        separator = " "
        interval = 5
}

order += "wireless wlp3s0"
order += "ethernet eno1"
order += "load"
order += "disk /"
order += "memory"
order += "battery 0"
#order += "cpu_temperature 0"
order += "tztime local"

wireless wlp3s0 {
        format_up = "W [%ip]"
        format_down = "W"
        separator = false
        separator_block_width = 10
}

ethernet eno1 {
        format_up = "E [%ip]"
        format_down = "E"
        separator = false
        separator_block_width = 30
}

load {
        format = "cpu %5min"
        separator = false
        separator_block_width = 10
}

disk "/" {
        format = "hd %percentage_used"
	threshold_type = "percentage_free"
	low_threshold = 15
        separator = false
        separator_block_width = 10
}

memory {
        format = "mem %used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
        separator = false
        separator_block_width = 20
}

battery 0 {
        format = "battery %status"
        format_down = "No battery"
        status_bat = "ðŸ”‹ BAT"
        status_chr = "âš¡ CHR"
        status_full = "âœ“ FULL"
        status_unk = "? UNK"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
	separator = false
	separator_block_width = 30
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

